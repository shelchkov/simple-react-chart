{
  "name": "simple-chart-react",
  "version": "0.0.1",
  "description": "React chart component",
  "main": "lib/index.js",
  "files": [
    "lib/**/*"
  ],
  "types": "lib/index.d.ts",
  "scripts": {
    "start:demo": "webpack serve",
    "format": "npm run pretty; npm run lint:fix",
    "build:demo": "NODE_ENV=production webpack",
    "build:lib": "npm run lib:files && npm run lib:compile",
    "typecheck": "tsc --noEmit",
    "lint:fix": "npm run lint -- --fix",
    "pretty": "prettier 'src/**/*' --write",
    "lib:files": "babel src/lib --extensions '.ts,.tsx' -d lib --delete-dir-on-start --copy-files",
    "lib:compile": "tsc src/lib/index.ts --outDir lib --declaration --jsx react-jsx --esModuleInterop",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "postversion": "git push && git push --tags"
  },
  "keywords": [
    "chart",
    "react",
    "reactjs",
    "graph",
    "data",
    "visualization"
  ],
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.16.0",
    "@babel/core": "^7.16.0",
    "@babel/node": "^7.16.0",
    "@babel/preset-env": "^7.16.4",
    "@babel/preset-react": "^7.16.0",
    "@babel/preset-typescript": "^7.16.0",
    "@types/react": "^17.0.35",
    "@types/react-dom": "^17.0.11",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "babel-loader": "^8.2.3",
    "css-loader": "^6.5.1",
    "eslint": "^7.32.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.1",
    "eslint-plugin-react": "^7.27.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "html-webpack-plugin": "^5.5.0",
    "path": "^0.12.7",
    "prettier": "^2.4.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "style-loader": "^3.3.1",
    "typescript": "^4.5.2",
    "webpack": "^5.64.1",
    "webpack-cli": "^4.9.1",
    "webpack-dev-server": "^4.5.0"
  }
}
